@page "/register"
@using System.ComponentModel.DataAnnotations

<h3>Register</h3>

<div class="login-form">
    <EditForm Model="@registerModel" OnValidSubmit="HandleRegister">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div>
            <label>Email:</label><br />
            <InputText @bind-Value="registerModel.Email" type="email" class="form-control" />
        </div>

        <div style="margin-top: 1em;">
            <label>Password:</label><br />
            <InputText @bind-Value="registerModel.Password" type="password" class="form-control" />
        </div>

        <div style="margin-top: 1em;">
            <label>Confirm Password:</label><br />
            <InputText @bind-Value="registerModel.ConfirmPassword" type="password" class="form-control" />
        </div>

        <div style="margin-top: 1.5em;">
            <button type="submit" class="btn btn-success w-100">Register</button>
        </div>
    </EditForm>

    <div class="text-center mt-3">
        <span>Already have an account?</span>
        <a href="/login" class="btn btn-link">Login</a>
    </div>
</div>

@code {
    private RegisterModel registerModel = new();

    private void HandleRegister()
    {
        Console.WriteLine($"Register Email: {registerModel.Email}");

        if (registerModel.Password != registerModel.ConfirmPassword)
        {
            Console.WriteLine("Passwords do not match.");
        }
    }

    public class RegisterModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; }

        [Required]
        [MinLength(6)]
        public string Password { get; set; }

        [Required]
        [Compare(nameof(Password), ErrorMessage = "Passwords do not match.")]
        public string ConfirmPassword { get; set; }
    }
}
